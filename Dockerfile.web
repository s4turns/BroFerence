FROM nginx:alpine

# Copy client files directly into the image
COPY client/ /usr/share/nginx/html/

# Copy SSL certificates
COPY ssl/nginx-selfsigned.crt /etc/ssl/certs/nginx-selfsigned.crt
COPY ssl/nginx-selfsigned.key /etc/ssl/private/nginx-selfsigned.key

# Set app.html as the default index with HTTP and HTTPS support
RUN echo 'server { \
    listen 80; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index app.html index.html; \
    location / { \
        try_files $uri $uri/ /app.html; \
    } \
} \
server { \
    listen 443 ssl; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index app.html index.html; \
    ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt; \
    ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key; \
    ssl_protocols TLSv1.2 TLSv1.3; \
    ssl_ciphers HIGH:!aNULL:!MD5; \
    location / { \
        try_files $uri $uri/ /app.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80 443

CMD ["nginx", "-g", "daemon off;"]
